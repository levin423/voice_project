#JSGF V1.0;
grammar advanced_command;
public <cmd> = STOP | CONTINUE SPEECH | PAUSE SPEECH | <limb> <joint> | <short_action>;
<short_action> = <movement> <direction> <speed>;
<movement> = MOVE | SHIFT;
<limb> = LEFT | RIGHT;
<joint> = SHOULDER | ELBOW | WRIST;
<direction> = LEFT | RIGHT | <dir1> | <dir2>;
<dir1> = UP | HIGHER;
<dir2> = DOWN | LOWER;
<speed> = [FASTER | SLOWER];
